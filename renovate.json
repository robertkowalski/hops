{
  "extends": ["config:base", ":preserveSemverRanges"],
  "prCreation": "not-pending",
  "dependencyDashboard": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "postUpdateOptions": ["yarnDedupeHighest"],
  "automergeType": "pr-comment",
  "automergeComment": "bors merge",
  "requiredStatusChecks": null,
  "semanticCommitType": "chore",
  "semanticCommitScope": null,
  "baseBranches": [
    "master",
    "release-bot/next-v14.x",
    "release-bot/next-v13.x"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^package.json$"],
      "matchStrings": [
        "\"react-apollo\": \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "depNameTemplate": "yarn",
      "datasourceTemplate": "npm"
    }
  ],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies", "peerDependencies"],
      "semanticCommitType": "fix"
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "rangeStrategy": "bump"
    },
    {
      "matchBaseBranches": ["master"],
      "labels": [":package: master"]
    },
    {
      "matchBaseBranches": ["release-bot/next-v14.x"],
      "labels": [":package: v14"]
    },
    {
      "matchBaseBranches": ["release-bot/next-v13.x"],
      "labels": [":package: v13"],
      "major": {
        "enabled": false
      },
      "minor": {
        "enabled": false
      }
    }
  ]
}
